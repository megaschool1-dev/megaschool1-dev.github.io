@page "/shareables"
@inherits Components.ComponentBase
@using Components
@using MWRCheatSheet.Components
@using Append.Blazor.WebShare
@using MWRCheatSheet.Model;
@using MWRCheatSheet.Model.UI
@inject IWebShareService WebShareService
@inject Repository.Repository Repo
@inject Blazored.LocalStorage.ILocalStorageService LocalStorage
@inject Constants Constants
@inject MWRCheatSheet.Model.UISettings UI

<Collapsable Title="Essentials" ExpandPrompt="Show">
    <MudTabs Elevation="0" Rounded="true" Centered="true" Color="@Color.Primary" ApplyEffectsToContainer="true" PanelClass="pa-6">
        <MudTabPanel Text="Corporate">
            <MudStack>
                <ShareableVideoMultilingual Description="@Constants.MoneyChallenge[Strategy.Corporate].Description"
                                            Duration="@Constants.MoneyChallenge[Strategy.Corporate].Duration"
                                            Url="@Constants.MoneyChallenge[Strategy.Corporate].PreviewUrl"
                                        
                                            EnglishTextToCopy="@(Constants.MoneyChallenge[Strategy.Corporate].English.Message)"
                                            EnglishTooltip="@(Constants.MoneyChallenge[Strategy.Corporate].English.Tooltip)"
                                            EnglishImageUrl="@(Constants.MoneyChallenge[Strategy.Corporate].ImageUrl)"
                                        
                                            SpanishTextToCopy="@(Constants.MoneyChallenge[Strategy.Corporate].Spanish!.Message)"
                                            SpanishTooltip="@(Constants.MoneyChallenge[Strategy.Corporate].Spanish!.Tooltip)"
                                            SpanishImageUrl="@(Constants.MoneyChallenge[Strategy.Corporate].ImageUrl)" />
                <ShareableVideoMultilingual Description="@($"MWR Opportunity")"
                                            Duration="new(0, 10, 0)"
                                            Url="@(UI.EnglishLocale[Model.Content.CorporateBusinessOverview]!.MinimalistUrl())"
                                            
                                            EnglishTextToCopy="@Shareable.VideoShareable("MWR Opportunity", UI.EnglishLocale[Model.Content.CorporateBusinessOverview]!.MinimalistUrl(), new (0, 0, 10, 0))"
                                            EnglishTooltip="English shareable copied!"
                                            EnglishImageUrl="@Constants.GetImageUrl(Image.MoneyChallengeLogo)"
                                            
                                            SpanishTextToCopy="@Shareable.VideoShareable("MWR Opportunity", UI.SpanishLocale[Model.Content.CorporateBusinessOverview]!.MinimalistUrl(), new (0, 0, 12, 9))"
                                            SpanishTooltip="Español shareable copied!"
                                            SpanishImageUrl="@Constants.GetImageUrl(Image.MoneyChallengeLogo)" />
            </MudStack>
        </MudTabPanel>
        <MudTabPanel Text="EDM">
            <MudStack>
                <ShareableVideo Description="@Constants.MoneyChallenge[Strategy.ExtraDigitMovement].Description"
                                Duration="@Constants.MoneyChallenge[Strategy.ExtraDigitMovement].Duration"
                                Url="@Constants.MoneyChallenge[Strategy.ExtraDigitMovement].PreviewUrl"
                                Tooltip="@(Constants.MoneyChallenge[Strategy.ExtraDigitMovement].English.Tooltip)"
                                TextToCopy="@(Constants.MoneyChallenge[Strategy.ExtraDigitMovement].English.Message)"
                                ImageUrl="@(Constants.MoneyChallenge[Strategy.ExtraDigitMovement].ImageUrl)" />
                <ShareableVideo Description="Need More Info?"
                                Duration="new(0, 25, 0)"
                                Url="@(UI.EnglishLocale[Model.Content.EDMNeedMoreInfo]!.MinimalistUrl())"
                                Tooltip="Shareable copied!"
                                TextToCopy="@($"72-Hour Money Challenge - More Information{Environment.NewLine}{Constants.PointingDownEmoji}{Environment.NewLine}(25min){Environment.NewLine}{UI.EnglishLocale[Model.Content.EDMNeedMoreInfo]!.MinimalistUrl()}")"
                                ImageUrl="@Constants.GetImageUrl(Image.MoneyChallengeLogo)" />
            </MudStack>
        </MudTabPanel>
        <MudTabPanel Text="Mega School">
            <MudStack>
                <ShareableVideoMultilingual Description="@Constants.MoneyChallenge[Strategy.MegaSchool].Description"
                                            Duration="@Constants.MoneyChallenge[Strategy.MegaSchool].Duration"
                                            Url="@Constants.MoneyChallenge[Strategy.MegaSchool].PreviewUrl"
                                            
                                            EnglishTextToCopy="@(Constants.MoneyChallenge[Strategy.MegaSchool].English.Message)"
                                            EnglishTooltip="@(Constants.MoneyChallenge[Strategy.MegaSchool].English.Tooltip)"
                                            EnglishImageUrl="@(Constants.MoneyChallenge[Strategy.MegaSchool].ImageUrl)"
                                            
                                            SpanishTextToCopy="@(Constants.MoneyChallenge[Strategy.MegaSchool].Spanish!.Message)"
                                            SpanishTooltip="@(Constants.MoneyChallenge[Strategy.MegaSchool].Spanish!.Tooltip)"
                                            SpanishImageUrl="@(Constants.MoneyChallenge[Strategy.MegaSchool].ImageUrl)" />
            </MudStack>
        </MudTabPanel>
    </MudTabs>
</Collapsable>
<br/>
<br/>
<Collapsable Title="Explainers" ExpandPrompt="Show">
    <MudStack>
        <ShareableVideo Description="@(Constants.MoneyChallengeFAQ.Description)"
                        Duration="@(Constants.MoneyChallengeFAQ.Duration)"
                        Url="@(Constants.MoneyChallengeFAQ.PreviewUrl)"
                        Tooltip="@(Constants.MoneyChallengeFAQ.English.Tooltip)"
                        TextToCopy="@(Constants.MoneyChallengeFAQ.English.Message)"
                        ImageUrl="@(Constants.MoneyChallengeFAQ.ImageUrl)" />
        <ShareableVideo Description="Reduce My Taxes"
                        Duration="new(0, 5, 0)"
                        Url="@(UI.EnglishLocale[Model.Content.ReduceMyTaxesExplainer]!.MinimalistUrl())"
                        Tooltip="Shareable copied!"
                        TextToCopy="@($"MWR Reduce My Taxes{Environment.NewLine}{Constants.PointingDownEmoji}{Environment.NewLine}(5min){Environment.NewLine}{UI.EnglishLocale[Model.Content.ReduceMyTaxesExplainer]!.MinimalistUrl()}")"
                        ImageUrl="@Constants.GetImageUrl(Image.MoneyChallengeLogo)" />
        <ShareableVideo Description="Eliminate My Debt"
                        Duration="new(0, 3, 0)"
                        Url="@(UI.EnglishLocale[Model.Content.EliminateMyDebtExplainer]!.MinimalistUrl())"
                        Tooltip="Shareable copied!"
                        TextToCopy="@($"MWR Eliminate My Debt{Environment.NewLine}{Constants.PointingDownEmoji}{Environment.NewLine}(3min){Environment.NewLine}{UI.EnglishLocale[Model.Content.EliminateMyDebtExplainer]!.MinimalistUrl()}")"
                        ImageUrl="@Constants.GetImageUrl(Image.MoneyChallengeLogo)" />
        <ShareableVideo Description="Investments"
                        Duration="new(0, 6, 30)"
                        Url="@(UI.EnglishLocale[Model.Content.InvestmentsExplainer]!.MinimalistUrl())"
                        Tooltip="Shareable copied!"
                        TextToCopy="@($"MWR Investments{Environment.NewLine}{Constants.PointingDownEmoji}{Environment.NewLine}(6min){Environment.NewLine}{UI.EnglishLocale[Model.Content.InvestmentsExplainer]!.MinimalistUrl()}")"
                        ImageUrl="@Constants.GetImageUrl(Image.MoneyChallengeLogo)" />
        <ShareableVideo Description="Trusts"
                        Duration="new(0, 7, 0)"
                        Url="@(UI.EnglishLocale[Model.Content.TrustsExplainer]!.MinimalistUrl())"
                        Tooltip="Shareable copied!"
                        TextToCopy="@($"MWR Trust Funds{Environment.NewLine}{Constants.PointingDownEmoji}{Environment.NewLine}(7min){Environment.NewLine}{UI.EnglishLocale[Model.Content.TrustsExplainer]!.MinimalistUrl()}")"
                        ImageUrl="@Constants.GetImageUrl(Image.MoneyChallengeLogo)" />
        <ShareableVideo Description="Revenue Share"
                        Duration="new(0, 8, 0)"
                        Url="@(UI.EnglishLocale[Model.Content.RevenueShareExplainer]!.MinimalistUrl())"
                        Tooltip="Shareable copied!"
                        TextToCopy="@($"MWR Revenue Sharing{Environment.NewLine}{Constants.PointingDownEmoji}{Environment.NewLine}(8min){Environment.NewLine}{UI.EnglishLocale[Model.Content.RevenueShareExplainer]!.MinimalistUrl()}")"
                        ImageUrl="@Constants.GetImageUrl(Image.MoneyChallengeLogo)" />
    </MudStack>
</Collapsable>
<br />
<br />
<Collapsable Title="Services" ExpandPrompt="Show">
    <MudStack>
        <ShareableVideoMultilingual Description="@($"MWR Wealth Membership")"
                                    Url="@(UI.EnglishLocale[Model.Content.Membership]!.MinimalistUrl())"
                                    Duration="new(0, 8, 0)"
                                    
                                    EnglishTextToCopy="@($"MWR Wealth Membership{Environment.NewLine}{Constants.PointingDownEmoji}{Environment.NewLine}(8min){Environment.NewLine}{UI.EnglishLocale[Model.Content.Membership]!.MinimalistUrl()}")"
                                    EnglishTooltip="English shareable copied!"
                                    EnglishImageUrl="@Constants.GetImageUrl(Image.MembershipLogo)"
                                    
                                    SpanishTextToCopy="@($"MWR Wealth Membership{Environment.NewLine}{Constants.PointingDownEmoji}{Environment.NewLine}(10min){Environment.NewLine}{UI.SpanishLocale[Model.Content.Membership]!.MinimalistUrl()}")"
                                    SpanishTooltip="Español shareable copied!"
                                    SpanishImageUrl="@Constants.GetImageUrl(Image.MembershipLogo)" />
        <br />
        @if (_pageLoaded)
        {
            <ShareableVideoMultilingual Description="Instant Pay Raise"
                                        Url="@Constants.InstantPayRaiseUrlEnglish(AppState!.UserName)"
                                        
                                        EnglishTextToCopy="@($"MWR Instant Pay Raise{Environment.NewLine}{Constants.PointingDownEmoji}{Environment.NewLine}{Constants.InstantPayRaiseUrlEnglish(AppState!.UserName)}")"
                                        EnglishTooltip="English shareable copied!"
                                        EnglishImageUrl="@Constants.GetImageUrl(Image.MoneyChallengeLogo)"
                                        
                                        SpanishTextToCopy="@($"MWR Instant Pay Raise{Environment.NewLine}{Constants.PointingDownEmoji}{Environment.NewLine}{Constants.InstantPayRaiseUrlSpanish(AppState!.UserName)}")"
                                        SpanishTooltip="Español shareable copied!"
                                        SpanishImageUrl="@Constants.GetImageUrl(Image.MoneyChallengeLogo)" />
            <br />
        }
        else
        {
            <MudStack Row="true">
                <MudSpacer />
                <MudText Align="Align.Center">
                    Instant Pay Raise
                    <br />
                    <MudProgressCircular Indeterminate="true" />
                </MudText>
                <MudSpacer />
            </MudStack>
            <br />
        }
        <ShareableVideoMultilingual Description="@($"MWR Credit Restoration")"
                                    Duration="new(0, 6, 0)"
                                    Url="@(UI.EnglishLocale[Model.Content.CreditRestoration]!.MinimalistUrl())"

                                    EnglishTextToCopy="@($"MWR Credit Restoration{Environment.NewLine}{Constants.PointingDownEmoji}{Environment.NewLine}(6min){Environment.NewLine}{UI.EnglishLocale[Model.Content.CreditRestoration]!.MinimalistUrl()}")"
                                    EnglishTooltip="English shareable copied!"
                                    EnglishImageUrl="@Constants.GetImageUrl(Image.MoneyChallengeLogo)"

                                    SpanishTextToCopy="@($"MWR Credit Restoration{Environment.NewLine}{Constants.PointingDownEmoji}{Environment.NewLine}(8min){Environment.NewLine}{UI.SpanishLocale[Model.Content.CreditRestoration]!.MinimalistUrl()}")"
                                    SpanishTooltip="Español shareable copied!"
                                    SpanishImageUrl="@Constants.GetImageUrl(Image.MoneyChallengeLogo)" />
        <br />
        <ShareableVideo Description=@($"MWR Health Share")
                        Duration="new(0, 5, 0)"
                        Url="@(UI.EnglishLocale[Model.Content.HealthShare]!.MinimalistUrl())"
                        Tooltip="Shareable copied!"
                        TextToCopy="@($"MWR Health Share{Environment.NewLine}{Constants.PointingDownEmoji}{Environment.NewLine}(5min){Environment.NewLine}{UI.EnglishLocale[Model.Content.HealthShare]!.MinimalistUrl()}")"
                        ImageUrl="@Constants.GetImageUrl(Image.HealthShare)" />
        <br />
        <ShareableVideoMultilingual Description=@($"Keys to Home Ownership")
                                    Duration="new(0, 3, 0)"
                                    Url="@(UI.EnglishLocale[Model.Content.KeysToHomeOwnership]!.MinimalistUrl())"

                                    EnglishTextToCopy="@($"MWR Keys to Home Ownership{Environment.NewLine}{Constants.PointingDownEmoji}{Environment.NewLine}(3min){Environment.NewLine}{UI.EnglishLocale[Model.Content.KeysToHomeOwnership]!.MinimalistUrl()}")"
                                    EnglishTooltip="English shareable copied!"
                                    EnglishImageUrl="@Constants.GetImageUrl(Image.MoneyChallengeLogo)"

                                    SpanishTextToCopy="@($"MWR Keys to Home Ownership{Environment.NewLine}{Constants.PointingDownEmoji}{Environment.NewLine}(3min){Environment.NewLine}{UI.SpanishLocale[Model.Content.KeysToHomeOwnership]!.MinimalistUrl()}")"
                                    SpanishTooltip="Español shareable copied!"
                                    SpanishImageUrl="@Constants.GetImageUrl(Image.MoneyChallengeLogo)" />
        <br />
        <ShareableVideoMultilingual Description=@($"Precious Metals")
                                    Duration="new(0, 5, 0)"
                                    Url="@(UI.EnglishLocale[Model.Content.PreciousMetals]!.MinimalistUrl())"

                                    EnglishTextToCopy="@($"MWR Precious Metals{Environment.NewLine}{Constants.PointingDownEmoji}{Environment.NewLine}(5min){Environment.NewLine}{UI.EnglishLocale[Model.Content.PreciousMetals]!.MinimalistUrl()}")"
                                    EnglishTooltip="English shareable copied!"
                                    EnglishImageUrl="@Constants.GetImageUrl(Image.PreciousMetals)"

                                    SpanishTextToCopy="@($"MWR Precious Metals{Environment.NewLine}{Constants.PointingDownEmoji}{Environment.NewLine}(5min){Environment.NewLine}{UI.SpanishLocale[Model.Content.PreciousMetals]!.MinimalistUrl()}")"
                                    SpanishTooltip="Español shareable copied!"
                                    SpanishImageUrl="@Constants.GetImageUrl(Image.PreciousMetals)" />
        <br />
        <ShareableVideoMultilingual Description=@($"Trust My Assets")
                                    Duration="new(0, 4, 0)"
                                    Url="@(UI.EnglishLocale[Model.Content.TrustMyAssets]!.MinimalistUrl())"

                                    EnglishTextToCopy="@($"MWR Trust My Assets{Environment.NewLine}{Constants.PointingDownEmoji}{Environment.NewLine}(4min){Environment.NewLine}{UI.EnglishLocale[Model.Content.TrustMyAssets]!.MinimalistUrl()}")"
                                    EnglishTooltip="English shareable copied!"
                                    EnglishImageUrl="@Constants.GetImageUrl(Image.MWRBanner)"

                                    SpanishTextToCopy="@($"MWR Trust My Assets{Environment.NewLine}{Constants.PointingDownEmoji}{Environment.NewLine}(4min){Environment.NewLine}{UI.SpanishLocale[Model.Content.TrustMyAssets]!.MinimalistUrl()}")"
                                    SpanishTooltip="Español shareable copied!"
                                    SpanishImageUrl="@Constants.GetImageUrl(Image.MWRBanner)" />
        <br />
        <ShareableVideo Description=@($"MWR for Real Estate & Mortgage Professionals")
                        Duration="new(0, 11, 0)"
                        Url="@(UI.EnglishLocale[Model.Content.RealEstatePros]!.MinimalistUrl())"
                        Tooltip="Shareable copied!"
                        TextToCopy="@($"MWR for Real Estate & Mortgage Professionals{Environment.NewLine}{Constants.PointingDownEmoji}{Environment.NewLine}(11min){Environment.NewLine}{UI.EnglishLocale[Model.Content.RealEstatePros]!.MinimalistUrl()}")"
                        ImageUrl="@Constants.GetImageUrl(Image.MWRBanner)" />
        <br />
        <ShareableVideo Description=@($"Protect My Assets")
                        Duration="new(0, 28, 0)"
                        Url="@(UI.EnglishLocale[Model.Content.ProtectMyAssets]!.MinimalistUrl())"
                        Tooltip="Shareable copied!"
                        TextToCopy="@($"MWR Protect My Assets{Environment.NewLine}{Constants.PointingDownEmoji}{Environment.NewLine}(28min){Environment.NewLine}{UI.EnglishLocale[Model.Content.ProtectMyAssets]!.MinimalistUrl()}")"
                        ImageUrl="@Constants.GetImageUrl(Image.MWRBanner)" />
        <br />
        <ShareableVideo Description="Structure My Legacy"
                        Duration="new(1, 27, 0)"
                        Url="@(UI.EnglishLocale[Model.Content.StructureMyLegacy]!.MinimalistUrl())"
                        Tooltip="Shareable copied!"
                        TextToCopy="@($"MWR Structure My Legacy{Environment.NewLine}{Constants.PointingDownEmoji}{Environment.NewLine}(1hr 27min){Environment.NewLine}{UI.EnglishLocale[Model.Content.StructureMyLegacy]!.MinimalistUrl()}")"
                        ImageUrl="@Constants.GetImageUrl(Image.MWRBanner)" />
        <MudSpacer />
    </MudStack>
</Collapsable>
<br />
<br/>
<Collapsable Title="Qualified Marketing Directors" ExpandPrompt="Show">
    <MudStack>
        @if (_pageLoaded)
        {
            <ShareableVideoMultilingual Description="Join MWR"
                                        Url="@Constants.JoinMakeWealthRealEnglish(AppState!.UserName)"

                                        EnglishTextToCopy="@Constants.JoinMakeWealthRealEnglish(AppState!.UserName)"
                                        EnglishTooltip="English shareable copied!"
                                        EnglishImageUrl="@Constants.GetImageUrl(Image.MoneyChallengeLogo)"

                                        SpanishTextToCopy="@Constants.JoinMakeWealthRealSpanish(AppState!.UserName)"
                                        SpanishTooltip="Español shareable copied!"
                                        SpanishImageUrl="@Constants.GetImageUrl(Image.MoneyChallengeLogo)" />
            <br />
        }
        else
        {
            <MudStack Row="true">
                <MudSpacer />
                <MudText Align="Align.Center">
                    Join MWR
                    <br />
                    <MudProgressCircular Indeterminate="true" />
                </MudText>
                <MudSpacer />
            </MudStack>
            <br />
        }
        @if (_pageLoaded)
        {
            <ShareableVideoMultilingual Description="My Website"
                                        EnglishTextToCopy="@Constants.MarketingDirectorUrlEnglish(AppState!.UserName)"
                                        EnglishTooltip="English shareable copied!"
                                        EnglishImageUrl="@Constants.GetImageUrl(Image.MoneyChallengeLogo)"

                                        SpanishTextToCopy="@Constants.MarketingDirectorUrlSpanish(AppState!.UserName)"
                                        SpanishTooltip="Español shareable copied!"
                                        SpanishImageUrl="@Constants.GetImageUrl(Image.MoneyChallengeLogo)" />
            <br />
        }
        else
        {
            <MudStack Row="true">
                <MudSpacer />
                <MudText Align="Align.Center">
                    My Website
                    <br />
                    <MudProgressCircular Indeterminate="true" />
                </MudText>
                <MudSpacer />
            </MudStack>
            <br />
        }
        <ShareableVideo Description="MWR Events"
                        Url="http://MakeWealthRealEvents.com"
                        Tooltip="Copied Shareable"
                        TextToCopy="http://MakeWealthRealEvents.com" />
        <br />
        <ShareableVideo Description=@Constants.CheatSheet.Description
                        Tooltip=@Constants.CheatSheet.English.Tooltip
                        TextToCopy=@Constants.CheatSheet.English.Message
                        ImageUrl=@Constants.CheatSheet.ImageUrl />
    </MudStack>
</Collapsable>
<br />
<br />
<Collapsable Title="Images" ExpandPrompt="Show">
    <MudStack>
        <MudText Align="Align.Center">Tap Image to Download</MudText>
        <MudLink Href="images/72hour-money-challenge-logo.png" download>
            <MudImage Fluid="true" Src="images/72hour-money-challenge-logo.png" Alt="MWR 72-Hour Money Challenge" Class="rounded-lg" />
        </MudLink>
        <MudLink Href="images/mwr-banner.png" download>
            <MudImage Fluid="true" Src="images/mwr-banner.png" Alt="MWR Banner" Class="rounded-lg" />
        </MudLink>
        <MudLink Href="images/mwr-membership-logo.jpg" download>
            <MudImage Fluid="true" Src="images/mwr-membership-logo.jpg" Alt="MWR Membership Banner" Class="rounded-lg" />
        </MudLink>
        <MudLink Href="images/mwr-healthshare.png" download>
            <MudImage Fluid="true" Src="images/mwr-healthshare.png" Alt="MWR HealthShare" Class="rounded-lg" />
        </MudLink>
    </MudStack>
</Collapsable>
@code {
    private bool _pageLoaded;

    protected override void OnInitialized()
    {
        _pageLoaded = true;
        this.StateHasChanged();
    }
}
